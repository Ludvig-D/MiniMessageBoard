<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <div>
      <% if (locals.users) {%> <% users.forEach(user => { %>
      <div>
        <p style='margin: 0;'>ID: <%= user.id %></p>
        <p style='margin: 0;'>Name: <%= user.firstName %> <%= user.lastName %></p>
        <p style='margin: 0;'>Email: <%= user.email %></p>
        
        <%if(user.age) {%>
          <p style='margin: 0'>Age: <%= user.age %></p>
        <%}%>
        <% if(user.bio){ %>
          <p style='margin: 0;'>Bio: <%= user.bio %></p>
        <% } %>
        <div>
          <a href="/user/<%= user.id %>/update">Update</a>
          <form
            action="/user/<%= user.id %>/delete"
            method="POST"
            style="display: inline"
          >
            <button
              type="submit"
              onclick="return confirm('Are you sure you want to delete this user?');"
            >
              Delete
            </button>
          </form>
        </div>
      </div>

      <% }); %> <% } %>
    <div/>
    <a href="/user/create">Create a user</a>
  </body>
</html>
